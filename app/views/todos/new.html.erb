<h1>Get Shit Done</h1>

<%= form_for(@todo) do |f| %>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <span class="field">
    <%= f.text_field :name %>
  </span>
  <span class="actions">
    <%= f.submit %>
  </span>

  <div class="field">
    <%= f.label :completed %><br />
    <%= f.check_box :completed %>
  </div>

<% end %>

<h1>Incomplete Todos</h1>

<ul id="inc-todos">
  <% @inc_todos.each do |todo| %>
    <li><input type="checkbox" <%= "checked" if todo.completed %>><%= todo.name %><button>Delete</button></li>
  <%end%>
</ul><br />


<h1>Complete Todos</h1>

<ul id="complete-todos">
  <% @complete_todos.each do |todo| %>
    <li><input type="checkbox" <%= "checked" if todo.completed %>><%= todo.name %><button>Delete</button></li>
  <%end%>
</ul><br />
